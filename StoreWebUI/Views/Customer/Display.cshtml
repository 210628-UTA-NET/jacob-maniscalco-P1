@model StoreWebUI.Models.CustomerVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <h2 style= "bottom: 20px;">Customer Details</h2>    

    <form class="row g-3" asp-action="Update">
        <div class="col-md-4">
            <label asp-for="ID" class="form-label" >ID</label>
            <input asp-for="ID" class="form-control" type="text" value="@Model.ID" readonly>
        </div>
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name" placeholder="@Model.Name" readonly>
        </div>
        <div class="col-md-4">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="phone-number" value = "@Model.PhoneNumber" readonly>
        </div>
        <div class="col-md-6">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="address" value="@Model.Address" readonly>
        </div>
    </form>


    @foreach (var order in Model.Orders)
    {
        <h3>Order: # @Html.DisplayFor(ord => order.ID)</h3>
        <p>Store ID: # @Html.DisplayFor(ord => order.StoreFrontID)</p>
        <p>Location: @Html.DisplayFor(ord => order.Location)</p>
        <p>Price: @Html.DisplayFor(ord => order.Price)</p>

        <table class="table table-dark">
            <thead>
                <tr>
                   <th>ID</th>
                   <th>Name </th>
                   <th>Price</th>
                   <th>Description</th>
                   <th>Category</th>
                </tr>
            </thead>
             <tbody>
                @foreach(var orderItem in order.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(item => orderItem.ID)</td>
                        <td>@Html.DisplayFor(item => orderItem.Product.Name)</td>
                        <td>@Html.DisplayFor(item => orderItem.Product.Price)</td>
                        <td>@Html.DisplayFor(item => orderItem.Product.Category)</td>
                        <td>@Html.DisplayFor(item => orderItem.Product.Description)</td>
                    </tr>
                }
            </tbody> 
        </table>
    } 
    
</body>
</html>