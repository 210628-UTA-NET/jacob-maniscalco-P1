@model StoreWebUI.Models.CustomerVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <h2 style= "bottom: 20px;">Add Customer</h2>    

    <form class="row g-3" asp-action="AddCustomer">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="phone-number">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-10">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" type="text" class="form-control" id="address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-3" style="top: 15px;">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

</body>
</html>